@model LoginViewModel

@section Title {
    Login
}

<div class="row loginHeader">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <form asp-controller="User" asp-action="Login" method="post">
            <div class="form-group">
                <label id="user" asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="error"></span>
            </div>
            <div class="form-group">
                <label id="password" asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="error"></span>
            </div>
            <div class="registerAccount">
                <a asp-controller="User" asp-action="Register">Create new account</a>
            </div>
            <button class="btn">Login</button>
            <div>
                @Html.ValidationMessage("invalid-user", new { @class = "error" })
            </div>
        </form>
    </div>
    <div class="col-sm-4"></div>
</div>
